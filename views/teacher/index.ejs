<%- include ../partial/header.ejs %>
        <style>
            h1 {
                justify-content: center;
                text-align:center;
            }
            table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            }
            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    </head>
    <body>
        <%= query %>
        <table>        
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Options</th>
            </tr>
            <% for (let i = 0; i < data.length; i++) { %>
            <tr>
                <td><%= data[i].id %></td>
                <td><%= data[i].firstName %></td>
                <td><%= data[i].lastName %></td>
                <td><%= data[i].email %></td>
                <td><%= data[i].Subject.dataValues.subjectName %></td>
                <td>
                    <a href="/teacher/edit/<%= data[i].id %>">Edit</a>
                    <a onclick="return confirm('Are you sure?')" href="/teacher/delete/<%= data[i].id %>">Delete</a>
                </td>
            </tr>
            <% }; %>
        </table>
 <%- include ../partial/footer.ejs %>

 