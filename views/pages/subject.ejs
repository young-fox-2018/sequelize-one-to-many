<%- include ../partials/header.ejs %>
<body>
    <div class"container">
        <h1>List of Subject</h1>
        <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <% for(let i in data[0]){ %>
                            <th scope="col"><%=i %></th>
        
                        <%}%>
                        <th scope="col">Option</th> 
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < data.length; i++){ %>
                        <tr>
                            <td><%-data[i].id %></td>
                            <td><%-data[i].Subject_Name %></td>
                            <td>
                                <Ul>
                                    <li><%-data[i].Teachers[0]%></li>
                                    <li><%-data[i].Teachers[1]%></li>
                                </Ul>
                            </td>

                            <td><a href="/subject/edit/<%-data[i].id%>">edit</a> | <a href="/subject/delete/<%-data[i].id%>" onclick="return confirm('are you sure?')">delete</a></td>
                        </tr>
        
                    <% } %>
                </tbody>
            </table>    
            
    </div>
</body>
</html>