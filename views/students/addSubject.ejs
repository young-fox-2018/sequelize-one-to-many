<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style>
        .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        padding: 25px;
        width: 100%;
        color: #549DF7;
        text-align: center;
        background: white;
    }
    </style>
    <title>Edit Student</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
    <br>
    <br>
    <%- include('../partials/header') %>
    <br>
    <br>
    <div class="container">

        <h2>Add Subject To Student</h2>

        <form action="/student/<%=students.id%>/add-subject" method="POST">
            <div class="form-group">
                <label for="name">Fist Name: </label>
                <input type="text" name="first_name" class="form-control" aria-describedby="emailHelp" placeholder="Enter first name of student"
                    value="<%= students.first_name%>">
            </div>
            <div class="form-group">
                <label for="stock">Last Name: </label>
                <input type="text" name="last_name" class="form-control" aria-describedby="stockHelp" placeholder="Enter last name of student"
                    value="<%= students.last_name%>">
            </div>
            <div class="form-group">
                <label for="name">Email: </label>
                <input type="text" name="email" class="form-control" aria-describedby="priceHelp" placeholder="Enter email of student"
                    value="<%= students.email%>">
            </div>
            <div class="form-group">
                <label for="name">Choose Subject </label>
                <select class="form-control" name="subjectId" id="formSubject">
                    <% subjects.forEach(subject => { %>
                    <option value="<%= subject.id %>">
                        <%= subject.subject_name %>
                    </option>
                    <% })%>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Subject</button>


        </form>


    </div>
    <div style="height: 100px"></div>
    <br>
    <%- include('../partials/footer')%>
</body>

</html>